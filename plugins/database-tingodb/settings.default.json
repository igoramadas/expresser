// EXPRESSER DATABASE - TINGODB SETTINGS
{
    "database": {
        "tingodb": {
            // Enable Mongo module by default.
            "enabled": true,
            // General DB connection options.
            "options": {
                // Maximum number of objects to stay in cache per collection.
                "cacheSize": 1000,
                // Maximum size of cached objects.
                "cacheMaxObjSize": 2048,
                // Search in nested arrays? There might be a performance penalty.
                "searchInArray": false
            },
            // Default database is called tingo.db under the "database" folder.
            "path": "database"
        }
    }
}
